{
  "name": "@pai/supertag-cli",
  "version": "0.12.0",
  "description": "CLI for Tana integration - query, create, sync, and manage Tana workspaces",
  "type": "module",
  "bin": {
    "supertag": "./supertag"
  },
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile=supertag",
    "build:mcp": "bun build src/mcp/index.ts --compile --outfile=supertag-mcp",
    "dev": "bun run src/index.ts",
    "dev:mcp": "bun run src/mcp/index.ts",
    "inspect:mcp": "npx @modelcontextprotocol/inspector bun run src/mcp/index.ts",
    "test": "bun test ./tests/*.test.ts ./src/**/*.test.ts",
    "test:slow": "bun test ./tests/slow/",
    "test:full": "bun test",
    "precommit": "bun run test:full"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "commander": "^12.0.0",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.2",
    "resona": "file:///Users/fischer/work/resona",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "tana",
    "knowledge-management",
    "cli"
  ],
  "author": "Jens-Christian Fischer",
  "license": "MIT"
}
